                     
<head>
 <link rel="stylesheet" href="https://www.bootstrapdash.com/demo/plus/jquery/template/assets/css/demo_1/style.css">
</head>
<style>

.table td {
height: 5px;
padding:0.6375rem;
}
</style>
<table class="table table-striped">
      <tbody>
        <tr>
            <th>BATSMEN</th>
			<th></th>
            <th>R</th>
            <th>B</th>
            <th>4s</th>
            <th>6s</th>
            <th>SR</th>
        </tr>
  
         {% for batsman in batsman_list %}
            <tr>
                <td>{{ batsman.player_name }}</td>
				<td>{{ batsman.wicket_type }}</td>
                <td>{{ batsman.runs }}</td>
                <td>{{ batsman.balls }}</td>
                <td>{{ batsman.fours }}</td>
                <td>{{ batsman.sixes }}</td>
               <td>{{ batsman.strike_rate }}</td>
            </tr>
        {% endfor %}
		
		<tr>
			<td>Extras</td>
			{% if extras_list %}
				{% for extra in extras_list %}
					<td>{{extra.extras}}</td>
					<td>{{extra.extra_runs}}</td>
				{% endfor %}
				
			{% else %}
			<td>0</td>
			<td>0</td>
			{% endif %}			
		</tr>
		
		<tr>
			<td>TOTAL</td>
			{% if total_list %}
				{% for total in total_list %}
					<td>({{total.ACTUAL_OVERS}} Ov, RR:{{total.runrate}})</td>
					<td>{{total.score}}</td>
				{% endfor %}
				
			{% else %}
			<td>0</td>
			<td>0</td>
			{% endif %}			
		</tr>
		
	 </tbody>
</table>	
<table class="table table-striped">
      <tbody>
		<tr>
            <th>BOWLING</th>
			<th>O</th>
            <th>M</th>
            <th>R</th>
            <th>W</th>
			<th>NB</th>
			<th>WD</th>
            <th>ECON</th>
        </tr>
		{% for bowler in bowler_list %}
            <tr>
                <td>{{ bowler.player_name }}</td>
				<td>{{ bowler.overs }}</td>
				<td>{{ bowler.maiden }}</td>
				<td>{{ bowler.runs }}</td>
				<td>{{ bowler.wickets }}</td>
				<td>{{ bowler.no_ball }}</td>
				<td>{{ bowler.wide }}</td>
				<td>{{ bowler.economy_rate }}</td>
			</tr>
		{% endfor %}	
		
    </tbody>
</table>