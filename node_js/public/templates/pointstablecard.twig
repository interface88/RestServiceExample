<body>

<table class="table" style="position:absolute;top:0px;width:30%;text-align:center;border:0px;" align="center" >
      <tbody>
		<tr class="badge-info badge-pill" style="border:0px">
			<td>Team</td>
			<td>Matches</td>
			<td>Won</td>
			<td>Lost</td>
			<td>Points</td>
			<td>NRR</td>
		</tr>
{% for match in tournament_details %}

		<tr>
			<td>{{match.team_name}}</td>
			<td>{{match.matches}}</td>
			<td>{{match.won}}</td>
			<td>{{match.lost}}</td>
			<td>{{match.points}}</td>
			<td>{{match.NRR}}</td>
		</tr>	

{% endfor %} 
		
	  </tbody>
</table>